<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.chilczuk.grzegorz.sensorfun.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="257.6dp"
        android:layout_height="80dp"
        android:id="@+id/StartSensorOverviewB"
        android:text="@string/MainSensorOverviewButton"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="257.6dp"
        android:layout_height="80dp"
        android:id="@+id/StartDiceB"
        android:text="@string/MainDiceButton"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/StartSensorOverviewB"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="257.6dp"
        android:layout_height="80dp"
        android:id="@+id/StartCryptoB"
        android:text="@string/MainCryptoButton"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/StartSensorOverviewB"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="257.6dp"
        android:layout_height="80dp"
        android:id="@+id/StartSettingsB"
        android:text="@string/MainSettingsButton"
        android:textSize="20sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/StartDiceB"
        app:layout_constraintLeft_toRightOf="@+id/StartCryptoB"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.576" />

</android.support.constraint.ConstraintLayout>
